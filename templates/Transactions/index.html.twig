{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <table class="table" style="table-layout: fixed; width: 100%;">
            <thead class="table-dark">
            <tr>
                <th>Date</th>
                <th>Amount</th>
                <th>Status</th>
                <th>Hashdock</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for invoice in invoices|reverse %}
                <tr>
                    <td>{{ invoice.creationDate|date("d.m.Y H:i") }}</td>
                    <td>{{ (invoice.value  / 100000)|round(2) }} <small>mBTC</small></td>
                    <td>{{ invoice.settled ? 'Paid' : 'Waiting' }}</td>
                    <td style="display: inline-block;">{{ invoice.rHash }}</td>
                    <td><a href="{{ path('invoice_details_index', {'rHash': invoice.rHash}) }}">Details</a> </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}