{% extends 'base.html.twig' %}

{% block body %}
    <div class="container ">
        <div class="row justify-content-center align-items-center">
            <div class="col-8">
                <form class="form form-horizontal">
                    <div class="form-group row">
                        <label for="inputEmail3" class="col-sm-2 col-form-label col-form-label-lg">Description</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control form-control-lg" placeholder="">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputEmail3" class="col-sm-2 col-form-label col-form-label-lg">Charge</label>
                        <div class="col-sm-9">
                            <input type="number" class="form-control form-control-lg" placeholder="15 $">
                        </div>
                        <div class="col-sm-1">
                            <button type="submit" class="btn btn-default btn-lg">Create</button>
                        </div>
                    </div>

                    <div class="row justify-content-md-center">
                        <div class="col-sm-8">
                            <div class="row">
                                <div class="col">
                                    <button type="button" class="btn btn-default btn-block">1</button>
                                </div>
                                <div class="col">
                                    <button type="button" class="btn btn-default btn-block">2</button>
                                </div>
                                <div class="col">
                                    <button type="button" class="btn btn-default btn-block">3</button>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <button type="button" class="btn btn-default btn-block">4</button>
                                </div>
                                <div class="col">
                                    <button type="button" class="btn btn-default btn-block">5</button>
                                </div>
                                <div class="col">
                                    <button type="button" class="btn btn-default btn-block">6</button>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <button type="button" class="btn btn-default btn-block">7</button>
                                </div>
                                <div class="col">
                                    <button type="button" class="btn btn-default btn-block">8</button>
                                </div>
                                <div class="col">
                                    <button type="button" class="btn btn-default btn-block">9</button>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <button type="button" class="btn btn-default btn-block">Clear</button>
                                </div>
                                <div class="col">
                                    <button type="button" class="btn btn-default btn-block">0</button>
                                </div>
                                <div class="col">
                                    <button type="button" class="btn btn-default btn-block">Delete</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <br><br><br>

    <div class="container">
        <table class="table" style="table-layout: fixed; width: 100%;">
            <thead class="table-dark">
            <tr>
                <th>Date</th>
                <th>Amount</th>
                <th>Status</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for invoice in invoices %}
                <tr>
                    <td>{{ invoice.creationDate|date("d.m.Y H:i") }}</td>
                    <td>{{ (invoice.value  / 100000)|round(2) }} <small>mBTC</small></td>
                    <td>{{ invoice.settled ? 'Paid' : 'Waiting' }}</td>
                    <td>
                        <a href="#">{% if loop.first %}Hide{% else %}Show{% endif %}</a>
                        <a href="#">Details</a>
                        <a href="#">{% if loop.first %}{% else %}Refund{% endif %}</a>
                    </td>
                </tr>
                {% if loop.first %}
                    <tr>
                        <td>
                            <img src='{{ qrcode_path('lightning:' ~ invoice.paymentRequest, {'size': 150, 'margin': 0}) }}'
                                 alt='LightningCode'>
                        </td>
                        <td style="word-break: break-all; display: inline-block;">
                            lightning:{{ invoice.paymentRequest }}
                        </td>
                        <td>{{ invoice.memo }}</td>
                        <td></td>
                    </tr>
                {% endif %}
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}