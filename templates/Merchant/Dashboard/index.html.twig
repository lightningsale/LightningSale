{% extends 'base.html.twig' %}

{% block headerLeft %}
    <li class="nav-item"><a href="#" class="nav-link"><i class="fa fa-sign-out"></i> Sign out</a></li>
{% endblock %}

{% block headerRight %}
    <li class="nav-item"><a href="#" class="nav-link"><i class="fa fa-user"></i> Profile</a></li>
    <li class="nav-item"><a href="#" class="nav-link"><i class="fa fa-cog"></i> Settings</a></li>
{% endblock %}

{% block body %}
    <div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <form class="form form-horizontal">
                <div class="form-group form-group-lg">
                    <label for="inputEmail3" class="col-sm-2 control-label">Description</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" placeholder="">
                    </div>
                </div>
                <div class="form-group form-group-lg">
                    <label for="inputEmail3" class="col-sm-2 control-label">Charge</label>
                    <div class="col-sm-9">
                        <input type="number" class="form-control" placeholder="15 $">
                    </div>
                    <div class="col-sm-1">
                        <button type="submit" class="btn btn-default btn-lg">Create</button>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-9 col-md-offset-2">
                        <div class="row ">
                            <div class="col-xs-4">
                                <div class="num">
                                    <div class="btn btn-default btn-block">1</div>
                                </div>
                            </div>
                            <div class="col-xs-4">
                                <div class="num">
                                    <div class="btn btn-default btn-block">2</div>
                                </div>
                            </div>
                            <div class="col-xs-4">
                                <div class="num">
                                    <div class="btn btn-default btn-block">3</div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-4">
                                <div class="num">
                                    <div class="btn btn-default btn-block">4</div>
                                </div>
                            </div>
                            <div class="col-xs-4">
                                <div class="num">
                                    <div class="btn btn-default btn-block">5</div>
                                </div>
                            </div>
                            <div class="col-xs-4">
                                <div class="num">
                                    <div class="btn btn-default btn-block">6</div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-4">
                                <div class="num">
                                    <div class="btn btn-default btn-block">7</div>
                                </div>
                            </div>
                            <div class="col-xs-4">
                                <div class="num">
                                    <div class="btn btn-default btn-block">8</div>
                                </div>
                            </div>
                            <div class="col-xs-4">
                                <div class="num">
                                    <div class="btn btn-default btn-block">9</div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-4">
                                <div class="num">
                                    <div class="btn btn-default btn-block">Clear</div>
                                </div>
                            </div>
                            <div class="col-xs-4">
                                <div class="num">
                                    <div class="btn btn-default btn-block">0</div>
                                </div>
                            </div>
                            <div class="col-xs-4">
                                <div class="num">
                                    <div class="btn btn-default btn-block">Delete</div>
                                </div>
                            </div>
                        </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <br><br><br>

    <div class="container">
        <table class="table-striped table">
            <tbody>
            {% for invoice in invoices %}
                <tr>
                    <td>{{ invoice.createdAt|date('d.m.Y H:i') }}</td>
                    <td>{{ invoice.niceAmount }}</td>
                    <td>{% if loop.first %}Waiting{% else %}{{ invoice.niceState }}{% endif %}</td>
                    <td>
                        <a href="#">{% if loop.first %}Hide{% else %}Show{% endif %}</a>
                        <a href="#">Details</a>
                        <a href="#">{% if loop.first %}{% else %}Refund{% endif %}</a>
                    </td>
                </tr>
                {% if loop.first %}
                    <tr>
                        <td>
                            <img src='{{ qrcode_path(invoice.qrCodeMessage, {'size': 150, 'margin': 0}) }}' alt='LightningCode'>
                        </td>
                        <td colspan="3">
                            <span style="word-break: break-all">{{ invoice.qrCodeMessage }}</span>
                        </td>
                    </tr>

                {% endif %}
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}